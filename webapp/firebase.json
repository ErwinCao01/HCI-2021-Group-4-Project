{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "*/.",
      "*/node_modules/*"
    ],
    "headers": [
      {"source": "/service-worker.js", "headers": [{"key": "Cache-Controls",
        "value": "no-cache"}]}
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}